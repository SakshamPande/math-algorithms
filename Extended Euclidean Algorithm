def egcd(a, b):
	if a < b:
		u, g, x, y = 1, a, 0, b
	else:
		u, g, x, y = 0, b, 1, a

	q, t, s = None, None, None
	while y != 0:
		q, t = g//y , g%y
		s = u-q*x
		u, x = x, s
		g, y = y, t

# to get u,v so that u is the minimum and greater than 0, below lines can be added.
##	if u < 0:
	while u <= 0:
		u += b//g
	
	return (g, u, (g-a*u)//b)
